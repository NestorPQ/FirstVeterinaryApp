<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".buscar_mascota">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Buscar mascota"
        android:textSize="35dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ingrese el cÃ³digo de la mascota" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <EditText
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:inputType="number" />

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1.5"
            android:background="@drawable/botonborders"
            android:backgroundTint="@null"
            android:text="Search" />

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1.5"
            android:background="@drawable/botonborders"
            android:backgroundTint="@null"
            android:text="Clean" />

    </LinearLayout>

    <EditText
        android:id="@+id/ettipomascota"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:hint="Tipo" />

    <EditText
        android:id="@+id/etrazamascota"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Raza" />

    <EditText
        android:id="@+id/etnombremascota"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nombre" />

    <EditText
        android:id="@+id/etpesomascota"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:hint="Peso" />

    <EditText
        android:id="@+id/etcolormascota"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Color" />

    <Button
        android:id="@+id/btactualizarmascota"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"


        android:background="@drawable/botonborders"
        android:backgroundTint="@null"
        android:textSize="20dp"
        android:text="Actualizar datos" />

    <Button
        android:id="@+id/bteliminarmascota"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:background="@drawable/botonborders"

        android:backgroundTint="#E84444"
        android:textSize="20dp"
        android:text="Eliminar Mascota"
        app:backgroundTint="@null" />

    <Button
        android:id="@+id/btabriActivityRegistrar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:background="@drawable/botonborders"

        android:backgroundTint="@color/black"
        android:text="Agregar mascotas"

        android:textSize="20dp"
        app:backgroundTint="@null" />
</LinearLayout>